<Window x:Class="OpenshiftOPSCenter.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenshiftOPSCenter.App"
        xmlns:views="clr-namespace:OpenshiftOPSCenter.App.Views"
        mc:Ignorable="d"
        Title="Openshift OPS Center" Height="900" Width="1400"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing">
    <Window.Resources>
        <Style x:Key="SidebarButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E0E0E0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="ActiveSidebarButton" TargetType="Button" BasedOn="{StaticResource SidebarButton}">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Navigation Panel -->
        <StackPanel x:Name="MainSidebar" Grid.Column="0" Background="#F0F0F0">
            <TextBlock x:Name="CurrentUserText" Margin="10" TextWrapping="Wrap"/>
            <TextBlock x:Name="FullNameText" Margin="10" TextWrapping="Wrap"/>
            <Button x:Name="DashboardButton" Content="Dashboard" Height="40" Margin="10" Click="DashboardButton_Click"/>
            <Button x:Name="ClusterButton" Content="Cluster" Height="40" Margin="10" Click="ClusterButton_Click"/>
            <Button x:Name="ApplicationsButton" Content="Deployment Management" Height="40" Margin="10" Click="ApplicationsButton_Click"/>
            <Button x:Name="MonitoringButton" Content="Monitoring" Height="40" Margin="10" Click="MonitoringButton_Click"/>
            <Button x:Name="UserManagementButton" Content="Benutzerverwaltung" Height="40" Margin="10" Click="UserManagementButton_Click"/>
            <Button x:Name="SettingsButton" Content="Einstellungen" Height="40" Margin="10" Click="SettingsButton_Click"/>
        </StackPanel>

        <!-- Applications Navigation Panel -->
        <StackPanel x:Name="ApplicationsSidebar" Grid.Column="0" Background="#F0F0F0" Visibility="Collapsed">
            <TextBlock x:Name="ApplicationsUserText" Margin="10" TextWrapping="Wrap"/>
            <TextBlock x:Name="ApplicationsFullNameText" Margin="10" TextWrapping="Wrap"/>
            <Button x:Name="HomeButton" Content="Dashboard" Height="40" Margin="10" Click="HomeButton_Click"/>
            <Button x:Name="AppButton1" Content="Deployments/Pods" Height="40" Margin="10" Click="AppButton1_Click"/>
            <Button x:Name="AppButton2" Content="Volumes" Height="40" Margin="10" Click="AppButton2_Click"/>
            <Button x:Name="DeleteUnboundPVsButton" Content="Delete Unbound PV's" Height="40" Margin="10" Click="DeleteUnboundPVsButton_Click"/>
            <Button x:Name="AppButton3" Content="Multi Project" Height="40" Margin="10" Click="AppButton3_Click"/>
            <Button x:Name="AppButton4" Content="Create Webserver" Height="40" Margin="10" Click="AppButton4_Click"/>
            <Button x:Name="AutomationManagerButton" Content="Create Automation Manager" Height="40" Margin="10" Click="AutomationManagerButton_Click"/>
            <Button x:Name="OISFilesVolumeButton" Content="Create OISFiles Volume" Height="40" Margin="10" Click="OISFilesVolumeButton_Click"/>
            <Button x:Name="OISFilesOptIotVolumeButton" Content="Create OISFiles OPT/IOT" Height="40" Margin="10" Click="OISFilesOptIotVolumeButton_Click"/>
            <Button x:Name="FirmwareVolumeButton" Content="Create Firmware Volume" Height="40" Margin="10" Click="FirmwareVolumeButton_Click"/>
            <Button x:Name="EDHRVolumeButton" Content="Create EDHR Volume" Height="40" Margin="10" Click="EDHRVolumeButton_Click"/>
            <Button x:Name="SAPConnectivityVolumeButton" Content="SAP Connectivity Volume" Height="40" Margin="10" Click="SAPConnectivityVolumeButton_Click"/>
            <Button x:Name="AppButton5" Content="Service, Route, Rolebinding" Height="40" Margin="10" Click="AppButton5_Click"/>
        </StackPanel>

        <!-- Main Content Area -->
        <Grid Grid.Column="1" Margin="20">
            <!-- Error Message - Global, wird durch spezifische Meldungen in jedem Content ersetzt -->
            <TextBlock x:Name="ErrorMessage" Foreground="Red" TextWrapping="Wrap" VerticalAlignment="Top" Visibility="Collapsed"/>

            <!-- Login Content -->
            <Grid x:Name="LoginContent">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Willkommen im Openshift OPS Center" FontSize="24" HorizontalAlignment="Center"/>
                    <TextBox x:Name="FunctionTextBox" Margin="0,20,0,0" Width="200" Height="30" 
                             ToolTip="Geben Sie Ihre Funktion ein"/>
                    <Button x:Name="RequestAccessButton" Content="Zugriff anfordern" 
                            Height="40" Width="200" Margin="0,20,0,0" Click="RequestAccessButton_Click"/>
                </StackPanel>
            </Grid>

            <!-- Dashboard Content -->
            <Grid x:Name="DashboardContent" Visibility="Collapsed">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Willkommen im Openshift OPS Center" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                    <TextBlock Text="Centralized Openshift Function for Employes" 
                             FontSize="16" HorizontalAlignment="Center" TextWrapping="Wrap" MaxWidth="600"/>
                </StackPanel>
            </Grid>

            <!-- Cluster Content -->
            <Grid x:Name="ClusterContent" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Cluster Verwaltung" FontSize="24" Margin="0,0,0,20"/>

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Cluster Login -->
                    <GroupBox Header="Cluster Anmeldung" Grid.Row="0" Margin="0,0,0,20">
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Cluster:" Grid.Row="0" Grid.Column="0" Margin="0,0,10,5"/>
                            <ComboBox x:Name="ClusterComboBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,5"
                                    SelectionChanged="ClusterComboBox_SelectionChanged">
                                <ComboBoxItem Content="DEV" Tag="https://api.de08-lkd10.k8s.it.bbraun.com:6443"/>
                                <ComboBoxItem Content="QAS" Tag="https://api.de08-lkq10.k8s.it.bbraun.com:6443"/>
                                <ComboBoxItem Content="PRD" Tag="https://api.de08-lkp10.k8s.it.bbraun.com:6443"/>
                            </ComboBox>

                            <TextBlock Text="Benutzername:" Grid.Row="1" Grid.Column="0" Margin="0,0,10,5"/>
                            <TextBox x:Name="ClusterUsernameTextBox" Grid.Row="1" Grid.Column="1" Margin="0,0,0,5"/>

                            <TextBlock Text="Passwort:" Grid.Row="2" Grid.Column="0" Margin="0,0,10,5"/>
                            <PasswordBox x:Name="ClusterPasswordBox" Grid.Row="2" Grid.Column="1" Margin="0,0,0,5"/>

                            <Button x:Name="ClusterLoginButton" Content="Anmelden" Grid.Row="3" Grid.Column="1" 
                                    HorizontalAlignment="Right" Width="100" Margin="0,10,0,0"
                                    Click="ClusterLoginButton_Click"/>
                        </Grid>
                    </GroupBox>

                    <!-- Project Selection -->
                    <GroupBox Header="Projekt Auswahl" Grid.Row="1" Margin="0,0,0,20">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBox x:Name="ProjectSearchTextBox" Margin="0,0,0,10" 
                                     TextChanged="ProjectSearchTextBox_TextChanged"
                                     ToolTip="Projekt suchen..."/>

                            <ListView x:Name="ProjectsListView" Grid.Row="1" Height="200"
                                    SelectionChanged="ProjectsListView_SelectionChanged">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Projektname" Width="400"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </Grid>
                    </GroupBox>

                    <!-- Cluster Status -->
                    <GroupBox Header="Cluster Status" Grid.Row="2">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Aktueller Cluster:" Grid.Row="0" Grid.Column="0" Margin="0,0,10,5"/>
                            <TextBlock x:Name="CurrentClusterText" Grid.Row="0" Grid.Column="1" Margin="0,0,0,5"/>

                            <TextBlock Text="Aktuelles Projekt:" Grid.Row="1" Grid.Column="0" Margin="0,0,10,5"/>
                            <TextBlock x:Name="CurrentProjectText" Grid.Row="1" Grid.Column="1" Margin="0,0,0,5"/>
                        </Grid>
                    </GroupBox>
                </Grid>
            </Grid>

            <!-- Applications Content -->
            <Grid x:Name="ApplicationsContent" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="Deployment Management" FontSize="24" Margin="0,0,0,20"/>
                
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Application Details -->
                    <GroupBox Header="Funktionen" Grid.Row="0">
                        <StackPanel Margin="10">
                            <TextBlock Text="Verfügbare Funktionen:" FontWeight="Bold" Margin="0,0,0,10"/>
                            
                            <GroupBox Header="1. Deployments/Pods" Margin="0,0,0,10">
                                <TextBlock Text="Manage the Deployments from a Specific Project" 
                                         TextWrapping="Wrap" Margin="5"/>
                            </GroupBox>
                            
                            <GroupBox Header="2. Volumes" Margin="0,0,0,10">
                                <TextBlock Text="Show and Delete Project Specific Persistent Volumes and Volume Claims" 
                                         TextWrapping="Wrap" Margin="5"/>
                            </GroupBox>

                            <GroupBox Header="3. Delete Unbound PV's" Margin="0,0,0,10">
                                <TextBlock Text="You can delete all unbound PV's from a specific project." 
                                         TextWrapping="Wrap" Margin="5"/>
                            </GroupBox>                            
                            
                            <GroupBox Header="4. Multi Project" Margin="0,0,0,10">
                                <TextBlock Text="Start, Stop and Restart Pods from Multiple Projects." 
                                         TextWrapping="Wrap" Margin="5"/>
                            </GroupBox>
                            
                            <GroupBox Header="5. Create Webserver" Margin="0,0,0,10">
                                <TextBlock Text="Create a Webserver (Nampespace, Deployment, Route, Service, Secret, Volume)" 
                                         TextWrapping="Wrap" Margin="5"/>
                            </GroupBox>
                            
                            <GroupBox Header="6. Create Automation Manager" Margin="0,0,0,10">
                                <TextBlock Text="Create a Automation Manager (Logs PV, Persistency PV, Service and Route)" 
                                         TextWrapping="Wrap" Margin="5"/>
                            </GroupBox>

                            <GroupBox Header="7. Create OISFiles Volume" Margin="0,0,0,10">
                                <TextBlock Text="Create a OISFiles Volume (PV, PVC and Secret)" 
                                         TextWrapping="Wrap" Margin="5"/>
                            </GroupBox>

                            <GroupBox Header="8. Create OISFiles OPT/IOT Volume" Margin="0,0,0,10">
                                <TextBlock Text="Create a OISFiles OPT/IOT Volume (PV, PVC and Secret)" 
                                         TextWrapping="Wrap" Margin="5"/>
                            </GroupBox>

                            <GroupBox Header="9. Create Firmware Volume" Margin="0,0,0,10">
                                <TextBlock Text="Create a Firmware Volume (PV, PVC and Secret)" 
                                         TextWrapping="Wrap" Margin="5"/>
                            </GroupBox>

                            <GroupBox Header="10. Create EDHR Volume" Margin="0,0,0,10">
                                <TextBlock Text="Create a EDHR Volume (PV, PVC and Secret)" 
                                         TextWrapping="Wrap" Margin="5"/>
                            </GroupBox>                            

                            <GroupBox Header="11. Create SAP Connectivity Volume" Margin="0,0,0,10">
                                <TextBlock Text="Create a SAP Connectivity Volume (PV, PVC and Secret)" 
                                         TextWrapping="Wrap" Margin="5"/>
                            </GroupBox>               

                        </StackPanel>
                    </GroupBox>
                </Grid>
            </Grid>

            <!-- Deployments/Pods Content -->
            <Grid x:Name="DeploymentsPodsContent" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="Deployments und Pods Verwaltung" FontSize="24" FontWeight="Bold"/>
                    <TextBlock Text="Überwachung und Verwaltung von Deployments und Pods. Zeigt den aktuellen Status, Version und Health-Checks an." 
                             TextWrapping="Wrap" Margin="0,10,0,0"/>
                </StackPanel>
                
                <Grid Grid.Row="1" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Aktuelles Projekt: " FontWeight="Bold"/>
                        <TextBlock x:Name="DeploymentCurrentProjectText"/>
                    </StackPanel>
                    
                    <Button x:Name="RefreshDeploymentsButton" Grid.Column="1" Content="Aktualisieren" 
                          Width="120" Height="30" Click="RefreshDeploymentsButton_Click"/>
                </Grid>
                
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Deployments ListView -->
                    <GroupBox Grid.Row="0" Header="Deployments" Margin="0,0,0,10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <ListView x:Name="DeploymentsListView" Grid.Row="0" SelectionMode="Extended" SelectionChanged="DeploymentsListView_SelectionChanged">
                                <ListView.View>
                                    <GridView x:Name="DeploymentsGridView">
                                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="300"/>
                                        <GridViewColumn Header="Replicas" Width="100">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock>
                                                        <Run Text="{Binding AvailableReplicas}"/> / <Run Text="{Binding Replicas}"/>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Status" Width="120">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Status}">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Status}" Value="RUNNING">
                                                                        <Setter Property="Foreground" Value="Green"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="STOP">
                                                                        <Setter Property="Foreground" Value="Red"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Erstellt am" DisplayMemberBinding="{Binding CreationTimestamp, StringFormat=dd.MM.yyyy HH:mm}" Width="180"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                            
                            <!-- Steuerelemente für einzelne Deployments -->
                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,5" HorizontalAlignment="Left">
                                <TextBlock Text="Aktionen für ausgewähltes Deployment:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>
                                <Button x:Name="StartDeploymentButton" Content="Starten" Width="80" Margin="0,0,10,0" Click="StartDeploymentButton_Click"/>
                                <Button x:Name="StopDeploymentButton" Content="Stoppen" Width="80" Margin="0,0,10,0" Click="StopDeploymentButton_Click"/>
                                <Button x:Name="RestartDeploymentButton" Content="Neustarten" Width="80" Margin="0,0,10,0" Click="RestartDeploymentButton_Click"/>
                                <Button x:Name="DeleteDeploymentButton" Content="Löschen" Width="80" Margin="0,0,10,0" Click="DeleteDeploymentButton_Click"/>
                            </StackPanel>
                            
                            <!-- Steuerelemente für die Skalierung -->
                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,5" HorizontalAlignment="Right">
                                <TextBlock Text="Replicas:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBox x:Name="ReplicasTextBox" Width="50" Margin="0,0,5,0" PreviewTextInput="NumberValidationTextBox"/>
                                <Button x:Name="ScaleDeploymentButton" Content="Skalieren" Width="80" Click="ScaleDeploymentButton_Click"/>
                            </StackPanel>
                            
                            <!-- Steuerelemente für alle Deployments -->
                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,5,0,0" HorizontalAlignment="Left">
                                <TextBlock Text="Batch-Aktionen:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>
                                <Button x:Name="StartAllDeploymentsButton" Content="Alle starten" Width="100" Margin="0,0,10,0" Click="StartAllDeploymentsButton_Click"/>
                                <Button x:Name="StopAllDeploymentsButton" Content="Alle stoppen" Width="100" Margin="0,0,10,0" Click="StopAllDeploymentsButton_Click"/>
                                <Button x:Name="DeleteAllDeploymentsButton" Content="Alle löschen" Width="100" Margin="0,0,10,0" Click="DeleteAllDeploymentsButton_Click"/>
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                    
                    <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" Background="#E0E0E0"/>
                    
                    <!-- Pods ListView -->
                    <GroupBox Grid.Row="2" Header="Pods">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <ListView x:Name="PodsListView" Grid.Row="0">
                                <ListView.View>
                                    <GridView x:Name="PodsGridView">
                                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="300"/>
                                        <GridViewColumn Header="Status" Width="120">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Status}">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Status}" Value="RUNNING">
                                                                        <Setter Property="Foreground" Value="Green"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="PENDING">
                                                                        <Setter Property="Foreground" Value="Orange"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="SUCCEEDED">
                                                                        <Setter Property="Foreground" Value="Blue"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="STOP">
                                                                        <Setter Property="Foreground" Value="Red"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="UNKNOWN">
                                                                        <Setter Property="Foreground" Value="Gray"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Node" DisplayMemberBinding="{Binding Node}" Width="250"/>
                                        <GridViewColumn Header="IP" DisplayMemberBinding="{Binding IP}" Width="150"/>
                                        <GridViewColumn Header="Erstellt am" DisplayMemberBinding="{Binding CreationTimestamp, StringFormat=dd.MM.yyyy HH:mm}" Width="180"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                            
                            <!-- Steuerelemente für Pods -->
                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Left">
                                <TextBlock Text="Aktionen für ausgewählten Pod:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>
                                <Button x:Name="RestartPodButton" Content="Neustarten" Width="100" Margin="0,0,10,0" Click="RestartPodButton_Click"/>
                                <Button x:Name="DeletePodButton" Content="Löschen" Width="100" Click="DeletePodButton_Click"/>
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                </Grid>
            </Grid>

            <!-- Volumes Content -->
            <Grid x:Name="VolumesContent" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="Volume Verwaltung" FontSize="24" FontWeight="Bold"/>
                    <TextBlock Text="Verwaltung von persistenten Volumes und Volume Claims. Konfiguration von Storage-Klassen und Zugriffsmodi." 
                             TextWrapping="Wrap" Margin="0,10,0,0"/>
                </StackPanel>
                
                <Grid Grid.Row="1" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Aktuelles Projekt: " FontWeight="Bold"/>
                        <TextBlock x:Name="VolumeCurrentProjectText"/>
                    </StackPanel>
                    
                    <Button x:Name="RefreshVolumesButton" Grid.Column="1" Content="Aktualisieren" 
                          Width="120" Height="30" Click="RefreshVolumesButton_Click"/>
                </Grid>
                
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- PVCs ListView -->
                    <GroupBox Grid.Row="0" Header="Persistent Volume Claims" Margin="0,0,0,10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <ListView x:Name="PVCsListView" Grid.Row="0" SelectionMode="Extended">
                                <ListView.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Löschen" Click="DeletePVCButton_Click"/>
                                    </ContextMenu>
                                </ListView.ContextMenu>
                                <ListView.View>
                                    <GridView x:Name="PVCsGridView">
                                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="250"/>
                                        <GridViewColumn Header="Status" Width="100">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Status}">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Bound">
                                                                        <Setter Property="Foreground" Value="Green"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Pending">
                                                                        <Setter Property="Foreground" Value="Orange"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Lost">
                                                                        <Setter Property="Foreground" Value="Red"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Volume" DisplayMemberBinding="{Binding VolumeName}" Width="250"/>
                                        <GridViewColumn Header="Kapazität" DisplayMemberBinding="{Binding Capacity}" Width="100"/>
                                        <GridViewColumn Header="Modus" DisplayMemberBinding="{Binding AccessModes}" Width="150"/>
                                        <GridViewColumn Header="Erstellt am" DisplayMemberBinding="{Binding CreationTimestamp, StringFormat=dd.MM.yyyy HH:mm}" Width="180"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                            
                            <!-- Steuerelemente für PVCs -->
                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Left">
                                <TextBlock Text="Aktionen für ausgewählte PVCs:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>
